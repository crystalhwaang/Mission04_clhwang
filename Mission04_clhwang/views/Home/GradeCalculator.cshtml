@model GradeCalculatorModel;

<h2>Grade Calculator!</h2> <!--Calculating grades within the class-->
<p>Enter all grades as a whole number. (i.e. 90% is entered as 90)</p>
<form method="post">
    <label>Assignments: </label>
    <input type="text" id="assignments" asp-for="Assignments"/> <br />
    <label>Quizzes: </label>
    <input type="text" id="quizzes" asp-for="Quizzes"/> <br />
    <label>Group Projects: </label>
    <input type="text" id="projects" asp-for="Projects"/> <br />
    <label>INTEX: </label>
    <input type="text" id="intex" asp-for="Intex"/> <br />
    <label>Midterm: </label>
    <input type="text" id="midterm" asp-for="Midterm"/> <br />
    <label>Final: </label>
    <input type="text" id="final" asp-for="Final"/>
    <br />
    <button id="btnCalculate" type="submit">Calculate</button>
    <br />
    <br />
    <label>Your Grade: </label> <!--Printing the grade based on calculations made in the js file-->
    <div id="print"></div>
    <br /><br />

    <div asp-validation-summary="All"></div>

</form>
<!--Bringing in all of the extra extensions-->

<script src="js/gradecalculator.js"></script>